# =============================================================================
# POLYBACKER CONFIGURATION
# Copy this file to .env and fill in your values
# =============================================================================

# --- Wallet ---
# Your Polygon wallet private key (without 0x prefix)
POLYMARKET_PRIVATE_KEY=
# Signature type: 0=EOA (MetaMask), 1=Magic/email wallet, 2=Gnosis Safe
POLYMARKET_SIGNATURE_TYPE=0
# Funder address (required only for signature_type 1 or 2)
POLYMARKET_FUNDER=

# --- Copy Trading ---
# What percentage of their trade size to copy (0.1 = 10%)
COPY_PERCENTAGE=0.10
# Minimum copy size in USDC
MIN_COPY_SIZE=5.0
# Maximum copy size in USDC
MAX_COPY_SIZE=100.0
# Maximum total spend per day in USDC (safety limit)
MAX_DAILY_SPEND=500.0
# Maximum age of a trade to still copy (seconds). Default 5 minutes.
MAX_TRADE_AGE=300

# --- Arbitrage ---
# Minimum profit percentage to trigger a trade
MIN_PROFIT_PCT=1.0
# Amount in USDC per arbitrage trade
TRADE_AMOUNT=10.0
# Maximum position size in USDC
MAX_POSITION_SIZE=100.0

# --- Auth (Web3 Wallet Connect) ---
# Secret key for JWT tokens (generate a random string for production)
JWT_SECRET=change-me-in-production
# JWT token expiry in hours
JWT_EXPIRY_HOURS=72
# WalletConnect project ID â€” get one free at https://cloud.reown.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# --- General ---
# Seconds between polling cycles
POLL_INTERVAL=30
# Auto-execute trades (true/false). Set to false for dry-run monitoring.
AUTO_EXECUTE=true
# Path to SQLite database
DB_PATH=polybacker.db
